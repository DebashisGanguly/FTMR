<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>
<property>
  <name>mapred.job.tracker</name>
  <value>localhost:54311</value>
  <description>The host and port that the MapReduce job tracker runs
  at.  If "local", then jobs are run in-process as a single map
  and reduce task.
  </description>
</property>

<!--property>
	<name>fs.default.name</name>
	<value>file:///</value>
</property-->

<!--property>
  <name>mapred.child.java.opts</name>
  <value>-verbose:gc -Xloggc:/tmp/dump/@taskid@.gc \
    -Dcom.sun.management.jmxremote.authenticate=false \
    -Dcom.sun.management.jmxremote.ssl=false</value>                                    
</property--> 

<!-- property>
  <name>mapred.child.java.opts</name>
  <value>-Xdebug -Xnoagent -Djava.compiler=None -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=9089</value>                                    
</property-->

<property>
	<name>tasktracker.tasks.fault.tolerance</name>
	<value>1</value>
    <!-- set this to 1 always to determine number of replica and number of faults that can be tolerated -->
</property>

<property>
	<name>mapred.map.tasks.deferred.execution</name>
	<value>false</value>
    <!-- set this to false always to run all tasks in parallel -->
</property>

<property>
	<name>mapred.reduce.task.finish.script</name>
    <value>/bin/ls -la</value>
</property>

<property>
	<name>hadoop.job.history.user.location</name>
	<value>/tmp/history</value>
</property>
<!-- use old api -->

<!--property>
        <name>tasktracker.swap.disk</name>
        <value>true</value>
</property-->

<!--property>
<name>mapred.compress.map.output</name>
<value>true</value>
</property>

<property>
  <name>mapred.map.output.compression.codec</name>
  <value>org.apache.hadoop.io.compress.DefaultCodec</value>
</property-->


<property>
  <name>io.sort.mb</name>
  <value>10</value>
</property>

<property>
  <name>keep.failed.tasks.files</name>
  <value>true</value>
</property>

<property>
  <name>keep.tasks.files.pattern</name>
  <value>true</value>
</property>

<property>
  <name>mapred.local.dir</name>
  <value>/tmp</value>
</property>

<property>
  <name>hadoop.job.history.location</name>
  <value>/tmp</value>
</property>

<property>
  <name>mapred.reduce.tasks</name>
  <value>1</value>
  <!-- for experiment set this to 1 always -->
</property>

<property>
  <name>mapred.map.child.debug</name>
  <value>true</value>
</property>

<property>
  <name>mapred.reduce.child.debug</name>
  <value>false</value>
</property>

<property>
  <name>mapreduce.map.log.level</name>
  <value>ALL</value>
</property>

<property>
  <name>mapreduce.reduce.log.level</name>
  <value>ALL</value>
</property>

<property>
  <name>mapred.reduce.slowstart.completed.maps</name>
  <value>0</value>
</property>

<property>
  <name>mapred.tasks.tampering.percent</name>
  <value>0</value>
  <!-- give it to a float value like 0.1 to inject fault -->
</property>

<property>
    <name>mapred.reduce.tasks.tampering.digests.execution</name>
    <value>false</value>
    <!-- make this to true to inject fault in map digest; never inject fault in reduce -->
</property>

<property>
    <name>mapred.map.tasks.tampering.digests.execution</name>
    <value>false</value>
    <!-- make this to true to inject fault in map digest -->
</property>

<property>
    <name>mapred.map.tasks.tampering.file.execution</name>
    <value>false</value>
    <!-- make this to true to inject fault in map file; never used but for safer side -->
</property>

<property>
  <name>mapred.map.tasks.tentative.execution</name>
  <value>true</value>
  <!-- set this to true always to run all tasks in parallel -->
</property>

<property>
  <name>mapred.keep.job.files</name>
  <value>true</value>
</property>

<property>
  <name>security.digest.type</name>
  <value>SHA-256</value>
</property>
<!-- to print the output of the hadoop example -->
<property>
  <name>jobclient.output.filter</name>
  <value>ALL</value>
</property>

<property>
  <name>jobclient.output.filter</name>
  <value>ALL</value>
</property>

<property>
  <name>webinterface.private.actions</name>
  <value>true</value>
</property>

</configuration>
